extends ./layout

block title
 .title News

block content
  a(href='/news/add')
    button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored
      i.material-icons add
  for n in news
    div.demo-card-square.mdl-card.mdl-shadow--2dp.news_block
      div.mdl-card__title.mdl-card--expand
        img(src= n.urlToImage)        
      div.mdl-card__supporting-text #{n.description}
      div.mdl-card__actions.mdl-card--border
